<h1>Button <%= @button %></h1>
<h3>Your Button's name:</h3><section data-testid="button-name"><h4> <%= @button.name %></h4> </section>
<div data-testid="button-actions" class="d-flex justify-content-between flex-wrap">
  <div class="col-12 col-md-4 col-lg-3">
    <%= link_to "Configure button", edit_button_path(@button), class: "btn btn-secondary btn-block mb-2" %>
  </div>
  <div class="col-12 col-md-4 col-lg-3">
    <%= link_to "All my buttons", all_my_buttons_button_path(@button), class: "btn btn-secondary btn-block mb-2" %>
  </div>
  <div class="col-12 col-md-4 col-lg-3">
    <%= link_to "raw report", report_button_path(@button), class: "btn btn-secondary btn-block mb-2" %>
  </div>
</div>


<section data-testid="software-button">
  <button
    class="btn btn-primary btn-block"
    onClick="this.disabled = true; fetch('<%= event_button_path(@button) %>', { method: 'POST' }).then(() => this.disabled = false)",
  >Button</button>
</section>